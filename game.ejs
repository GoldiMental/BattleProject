                <button id="tuerShopOut" title="ShopStadt" class="Outside ShopHausOut_B interactive-element hidethis"
                    onclick="shopAusgang()"></button>
                <button id="tuerShopHgOut" title="Shop Hohes Gras"
                    class="Outside ShopHausHohesGrasOut interactive-element hidethis"
                    onclick="shopAusgangHG()"></button>
                <button id="ShopHandel" title="H√§ndler" class="Handler ShopHandel_B interactive-element hidethis"
                    onclick="shopHandel('Shop_1')"></button>
