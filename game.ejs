                    onclick="meinAusgang()"></button>
                <button id="tuerTroyIn" title="Troys Haus" class="Inside TroysHaus_B interactive-element hidethis"
                    onclick="troysEingang()"></button>
                <button id="tuerTroyOut" title="TroyStadt" class="Outside TroysHausOut_B interactive-element hidethis"
                    onclick="troysAusgang()"></button>
                <button id="tuerShopIn" title="Shop Haus" class="Inside ShopHaus_B interactive-element hidethis"
                    onclick="shopEingang()"></button>
                <button id="tuerShopHgIn" title="Shop Hohes Gras"
