                <button id="TulpaPC-Button" title="TulpaComputer" class="Tulpa-PC interactive-element hidethis"
                    onclick="TulpaPC();Click()"></button>
                <button id="ArenaButtonIn" title="Arena" class="Inside ArenaBtnIn interactive-element hidethis"
                    onclick="Click()"></button>
                <button id="ArenaButtonOut" title="Arena" class="Outside ArenaBtnOut interactive-element hidethis"
                    onclick="Click()"></button>
            </div>
            <div id="audio-controls" class="interactive-element">
                <label for="volumeSlider" class="interactive-element"></label>
                <input type="range" id="volumeSlider" min="0" max="1" step="0.01" value="0.1"
                    class="interactive-element">
                <button id="muteBtn" class="interactive-element">üîä</button>
            </div>
            <div id="user" class="Player down"></div>
            <button class="WASD" id="W_Click">‚¨ÜÔ∏è</button>
