            <button class="WASD" id="S_Click">‚¨áÔ∏è</button>
            <button class="WASD" id="D_Click">‚û°Ô∏è</button>
            <button id="Menu" class="interactive-element" onclick="MenuList();Click()">‚â°</button>
            <div id="MenuList" class="interactive-element hidethis">
                <button class="MenuList interactive-element"
                    onclick="Tulpa_Dex();Click()">Tulpa-Dex<sup>¬Æ</sup></button>
                <button class="MenuList interactive-element" onclick="Tulpas_List();Click()">Tulpa's</button>
                <button class="MenuList interactive-element" onclick="Info();Click()">Info</button>
                <button id="karte" class="MenuList interactive-element" onclick="Karte();Click()">Karte</button>
                <button class="MenuList interactive-element" onclick="Items();Click()">Item's</button>
                <button class="MenuList interactive-element" onclick="Click();Cheat()">Cheat's</button>
                <button class="MenuList interactive-element" onclick="Click();SaveGame()">Spiel speichern</button>
                <button class="MenuList interactive-element" onclick="Exit_Game();Click()">Spiel verlassen</button>
            </div>
            <div id="TulpaPC" class="hidethis">
                <div>TulpaPC</div>
                <div class="TulpaPC_01"></div>
                <div id="TulpaPC_List" class="interactive-element"></div>
                <button class="Exit_Button interactive-element" onclick="close_Tulpa_PC();Click()">Exit</button>
            </div>
            <div id="Tulpa_Dex" class="hidethis">
                <div>Tulpa-Dex<sup>¬Æ</sup></div>
                <div id="Tulpa_Dex_List" class="interactive-element"></div>
                <button class="Exit_Button interactive-element" onclick="close_Tulpa_Dex();Click()">Exit</button>
            </div>
            <div id="Tulpas" class="hidethis">
                <div>Tulpa's</div><br>
                <div id="Tulpa_List" class="interactive-element"></div>
                <button class="Exit_Button interactive-element" onclick="close_Tulpas();Click()">Exit</button>
            </div>
            <div id="Info" class="hidethis">
                <div style="text-align:center;">Info</div><br>
                <div id="Info_List" class="interactive-element"></div>
                <button class="Exit_Button interactive-element" onclick="close_Info();Click()">Exit</button>
            </div>
            <div id="Karte" class="hidethis">
                <div>Karte</div><br>
                <div id="Karte_info" class="interactive-element">
                    <div id="standort-marker">üí†</div>
                </div>

                <button class="Exit_Button interactive-element" onclick="close_Karte();Click()">Exit</button>
            </div>
            <div id="Items" class="hidethis">
                <div>Item's</div><br>
                <div id="Item_List" class="interactive-element"></div>
                <button class="Exit_Button interactive-element" onclick="close_Items();Click()">Exit</button>
            </div>

            <div id="shopMenu" class="hidethis">
                <h2>Shop Men√º</h2>
                <button class="menu-button interactive-element" onclick="buyItems();Click()">Kaufen</button>
                <button class="menu-button interactive-element" onclick="sellItems();Click()">Verkaufen</button>
                <button class="menu-button interactive-element" onclick="healTulpas();Click()">Tulpas Heilen</button>
                <button class="menu-button interactive-element" onclick="closeShop();Click()">Verlassen</button>
            </div>
            <div id="ShopBuyList" class="interactive-element hidethis"></div>
            <div id="ShopSellList" class="interactive-element hidethis"></div>

            <div class="TrainerDialogBox interactive-element hidethis" onclick="Click()"></div>
        </div>
        <div id="battle_game" class="hidethis">
            <div id="opponent">
                <div id="Name-opp"></div>
                <div id="LP-opp">
                    <div id="fill-opp"></div>
                </div>
                <div id="Tulpa-opp"></div>
            </div>
            <div id="self">
                <div id="Name-self"></div>
                <div id="LP-self">
                    <div id="fill-self"></div>
                </div>
                <div id="Tulpa-self"></div>
            </div>
            <div id="battle_game_menu" class="hidethis">
                <div id="change_tulpa" class="interactive-element hidethis"></div>
                <div id="use_item" class="interactive-element hidethis"></div>
            </div>
            <div id="battle-info">
                <div id="battle_text"></div>
                <div id="battle_box">
                    <div id="battle_menu" class="hidethis">
                        <button class="battle_Button interactive-element" id="fight" onclick="fight()">K√§mpfen</button>
                        <button class="battle_Button interactive-element" id="use_Items"
                            onclick="useItem()">Item's</button>
                        <button class="battle_Button interactive-element" id="change_Tulpa"
                            onclick="changeTulpa()">Tulpa's</button>
                        <button class="battle_Button interactive-element" id="escape" onclick="escape()">Flucht</button>
                    </div>
                    <div id="attack_menu" class="hidethis">
                        <button class="battle_Button interactive-element" id="Attack_1"
                            onclick="self_attack(this.innerHTML)">.</button>
                        <button class="battle_Button interactive-element" id="Attack_2"
                            onclick="self_attack(this.innerHTML)">.</button>
                        <button class="battle_Button interactive-element" id="Attack_3"
                            onclick="self_attack(this.innerHTML)">.</button>
                        <button class="battle_Button interactive-element" id="Attack_4"
                            onclick="self_attack(this.innerHTML)">.</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="customModalOverlay" class="custom-modal-overlay hidethis">
            <div class="custom-modal-content">
                <h3 id="customModalTitle" class="custom-modal-title"></h3>
                <p id="customModalMessage" class="custom-modal-message"></p>
                <div id="customModalButtonsContainer"></div>
                <input type="text" id="customModalInput" class="custom-modal-input interactive-element hidethis"
                    title="Eingabe erforderlich...">
                <div class="interactive-element custom-modal-buttons">
                    <button id="customModalOkButton" class="custom-modal-button interactive-element">Ok</button>
                    <button id="customModalCancelButton"
                        class="custom-modal-button interactive-element hidethis">Abbrechen</button>
                </div>
            </div>
        </div>
